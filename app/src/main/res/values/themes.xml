<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GPSSample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_low</item>
        <item name="colorPrimaryVariant">@color/primary_high</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/background</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_mid</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GPSSample.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GPSSample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GPSSample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.GPSSample.ActionBarStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="Theme.GPSSample.ActionButtonStyle" >
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.GPSSample.Background">
        <item name="android:background">@drawable/common_google_signin_btn_icon_light</item>
    </style>
</resources>