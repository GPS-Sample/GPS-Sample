<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreateStudy.CreateStudyFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:text="@string/study_name"
        android:textSize="17sp"
        android:textColor="@color/primary_textcolor" />

    <EditText
        android:id="@+id/study_name_edit_text"
        android:inputType="textCapWords"
        android:imeOptions="actionDone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/enter_study_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:text="@string/sampling_method"
        android:textSize="17sp"
        android:textColor="@color/primary_textcolor" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/spinner_frame">

        <Spinner
            android:id="@+id/sampling_method_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <TextView
        android:id="@+id/sample_size_text_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:text="@string/total_sample_size"
        android:textSize="17sp"
        android:textColor="@color/primary_textcolor" />

    <LinearLayout
        android:id="@+id/sample_size_1_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/sample_size_1_edit_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"/>

        <TextView
            android:id="@+id/sample_size_1_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="# of Households in all clusters"
            android:textColor="@color/primary_textcolor"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sample_size_2_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/sample_size_2_edit_text"
            android:gravity="center"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/sample_size_2_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="% of all Households in all clusters"
            android:textColor="@color/primary_textcolor"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sample_size_3_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/sample_size_3_edit_text"
            android:gravity="center"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/sample_size_3_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="% of total population in all clusters"
            android:textColor="@color/primary_textcolor"
            android:textSize="15sp" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/expandable_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancel_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/save_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/save" />
    </LinearLayout>
</LinearLayout>