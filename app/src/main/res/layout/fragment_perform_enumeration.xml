<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.perform_enumeration.PerformEnumerationFragment">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <include layout="@layout/list_item_enum_area" android:id="@+id/list_item_enum_area" />

    <FrameLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.mapbox.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_cameraTargetLat="33.77577524978659"
            mapbox:mapbox_cameraTargetLng="-84.39630379821243"
            mapbox:mapbox_cameraZoom="9.0">
        </com.mapbox.maps.MapView>

        <TextView
            android:id="@+id/legend_text_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="top|end"
            android:text="@string/legend"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:textStyle="normal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="top|end"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/black"
                android:text="@string/accuracy"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/accuracy_label_text_view"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/black"
                android:text="@string/unknown"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accuracy_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="bottom|end"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/primary"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/map_tile_cache_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:background="@drawable/cache2" />

        <Button
            android:id="@+id/center_on_location_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:background="@drawable/location_bubble" />

        <Button
            android:id="@+id/add_household_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:background="@drawable/add_house_blue" />

        <Button
            android:id="@+id/add_landmark_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:background="@drawable/add_location_blue" />

        <Button
            android:id="@+id/export_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:background="@drawable/export_blue" />

        <Space
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/help_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:background="@drawable/help" />
    </LinearLayout>
</LinearLayout>