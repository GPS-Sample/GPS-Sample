<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include android:id="@+id/text_layout" android:visibility="gone" layout="@layout/list_item_text_field" />
    <include android:id="@+id/number_layout" android:visibility="gone" layout="@layout/list_item_number_field" />
    <include android:id="@+id/date_layout" android:visibility="gone" layout="@layout/list_item_date_field" />
    <include android:id="@+id/checkbox_layout" android:visibility="gone" layout="@layout/list_item_checkbox_field" />
    <include android:id="@+id/dropdown_layout" android:visibility="gone" layout="@layout/list_item_dropdown_field" />

</FrameLayout>