<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SignInSignUpFragment">

    <fragment
        android:id="@+id/SignInSignUpFragment"
        android:name="edu.gtri.gpssample.fragments.SignInSignUpFragment"
        tools:layout="@layout/fragment_sign_in_sign_up">

        <action
            android:id="@+id/action_navigate_to_SignInFragment"
            app:destination="@id/SignInFragment" />
    </fragment>

    <fragment
        android:id="@+id/SignInFragment"
        android:name="edu.gtri.gpssample.fragments.SignInFragment"
        tools:layout="@layout/fragment_sign_in">

        <action
            android:id="@+id/action_navigate_to_AdminSelectRoleFragment"
            app:destination="@id/AdminSelectRoleFragment" />

        <action
            android:id="@+id/action_navigate_to_BarcodeScanFragment"
            app:destination="@id/BarcodeScanFragment" />
    </fragment>

    <fragment
        android:id="@+id/AdminSelectRoleFragment"
        android:name="edu.gtri.gpssample.fragments.AdminSelectRoleFragment"
        tools:layout="@layout/fragment_admin_select_role">

        <action
            android:id="@+id/action_navigate_to_SignInSignUpFragment"
            app:popUpTo="@id/SignInSignUpFragment"/>

        <action
            android:id="@+id/action_navigate_to_ManageConfigurationsFragment"
            app:destination="@id/ManageConfigurationsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/ManageConfigurationsFragment"
        android:name="edu.gtri.gpssample.fragments.ManageConfigurationsFragment"
        tools:layout="@layout/fragment_manage_configurations">

        <action
            android:id="@+id/action_navigate_to_CreateConfigurationFragment"
            app:destination="@id/CreateConfigurationFragment"/>

        <action
            android:id="@+id/action_navigate_to_ManageStudiesFragment"
            app:destination="@id/ManageStudiesFragment"/>
    </fragment>

    <fragment
        android:id="@+id/CreateConfigurationFragment"
        android:name="edu.gtri.gpssample.fragments.CreateConfigurationFragment"
        tools:layout="@layout/fragment_create_configuration">

        <action
            android:id="@+id/action_navigate_to_DefineEnumerationAreaFragment"
            app:destination="@id/DefineEnumerationAreaFragment"/>
    </fragment>

    <fragment
        android:id="@+id/DefineEnumerationAreaFragment"
        android:name="edu.gtri.gpssample.fragments.DefineEnumerationAreaFragment"
        tools:layout="@layout/fragment_define_enumeration_area">

        <action
            android:id="@+id/action_navigate_to_ManageConfigurationsFragment"
            app:popUpTo="@id/ManageConfigurationsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/ManageStudiesFragment"
        android:name="edu.gtri.gpssample.fragments.ManageStudiesFragment"
        tools:layout="@layout/fragment_manage_studies">

        <action
            android:id="@+id/action_navigate_to_CreateStudyFragment"
            app:destination="@id/CreateStudyFragment"/>

        <action
            android:id="@+id/action_navigate_to_StudyFragment"
            app:destination="@id/StudyFragment"/>
    </fragment>

    <fragment
        android:id="@+id/CreateStudyFragment"
        android:name="edu.gtri.gpssample.fragments.CreateStudyFragment"
        tools:layout="@layout/fragment_create_study">
    </fragment>

    <fragment
        android:id="@+id/StudyFragment"
        android:name="edu.gtri.gpssample.fragments.StudyFragment"
        tools:layout="@layout/fragment_study">
    </fragment>

    <fragment
        android:id="@+id/BarcodeScanFragment"
        android:name="edu.gtri.gpssample.fragments.BarcodeScanFragment"
        tools:layout="@layout/fragment_barcode_scan">

        <action
            android:id="@+id/action_navigate_to_SignInSignUpFragment"
            app:popUpTo="@id/SignInSignUpFragment"/>
    </fragment>

</navigation>