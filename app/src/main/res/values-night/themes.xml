<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GPSSample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_high</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:colorBackground">@color/background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
    </style>

    <style name="Theme.GPSSample.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyActionBarStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="Theme.GPSSample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GPSSample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.GPSSample.ActionBarStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingStart">0dp</item>
    </style>
</resources>